<div class="row">
  <div class="col-sm-4 sidebar">
    {{#each tweeters as |tweeter|}}
      {{tweeter-listing t=tweeter}}
    {{/each}}
  </div>
  <div class="col-sm-8 main">
    {{#each flashMessages.queue as |flash|}}
      {{flash-message flash=flash}}
    {{/each}}

    <div class="col-sm-12">
      <form class="form-inline" {{action "findTwitterUser" on="submit"}}>
        <div class="form-group">
          {{input type="text" value=twitterScreenName class="form-control" placeholder="Twitter Screen Name"}}
        </div>
        <button type="submit" class="btn btn-default">Search</button>
      </form>
    </div>

    {{twitter-user-form twitterUser=foundTwitterUser onSubmit=(action 'saveTwitterUser')}}
  </div>
</div>
